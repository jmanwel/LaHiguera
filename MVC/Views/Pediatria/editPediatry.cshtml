@model Entidades.Models.Pediatria;

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1 class="display-4">Editar consulta pediatrica del paciente @ViewBag.Paciente.Nombre @ViewBag.Paciente.Apellido</h1>
    <br />
    <form action="/Pediatria/editPediatry" method="POST">
        <div class="row">
            <div class="col">
                <label class="form-label" for="Peso">Peso: </label>
                <input class="form-control" type="text" name="Peso" value="@ViewBag.Pediatria.Peso" />
            </div>
            <div class="col">
                <label class="form-label" for="PercentilPeso">Percentil Peso: </label>
                <input class="form-control" type="text" name="PercentilPeso" value="@ViewBag.Pediatria.PercentilPeso" />
            </div>
            <div class="col">
                <label class="form-label" for="PzPeso">PzPeso: </label>
                <input class="form-control" type="text" name="PzPeso" value="@ViewBag.Pediatria.PzPeso" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="Talla">Talla: </label>
                <input class="form-control" type="text" name="Talla" value="@ViewBag.Pediatria.Talla" />
            </div>
            <div class="col">
                <label class="form-label" for="PercentilTalla">Percentil Talla: </label>
                <input class="form-control" type="text" name="PercentilTalla" value="@ViewBag.Pediatria.PercentilTalla" />
            </div>
            <div class="col">
                <label class="form-label" for="PzTalla">PzTalla: </label>
                <input class="form-control" type="text" name="PzTalla" value="@ViewBag.Pediatria.PzTalla"/>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="Imc">Imc: </label>
                <input class="form-control" type="text" name="Imc" value="@ViewBag.Pediatria.Imc" />
            </div>
            <div class="col">
                <label class="form-label" for="PercentilImc">Percentil Imc: </label>
                <input class="form-control" type="text" name="PercentilImc" value="@ViewBag.Pediatria.PercentilImc" />
            </div>
            <div class="col">
                <label class="form-label" for="PzImc">PzImc: </label>
                <input class="form-control" type="text" name="PzImc" value="@ViewBag.Pediatria.PzImc" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="Pc">Pc: </label>
                <input class="form-control" type="text" name="Pc" value="@ViewBag.Pediatria.Pc" />
            </div>
            <div class="col">
                <label class="form-label" for="PercentilPc">Percentil Pc: </label>
                <input class="form-control" type="text" name="PercentilPc" value="@ViewBag.Pediatria.PercentilPc" />
            </div>
            <div class="col">
                <label class="form-label" for="PzPc">PzPc: </label>
                <input class="form-control" type="text" name="PzPc" value="@ViewBag.Pediatria.PzPc" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label class="form-label" for="AgudezaDer">Agudeza Visual ojo der: </label>
                <input class="form-control" type="text" name="AgudezaDer" value="@ViewBag.Pediatria.AgudezaDer" />
            </div>
            <div class="col">
                <label class="form-label" for="AgudezaIzq">Agudeza Visual ojo izq: </label>
                <input class="form-control" type="text" name="AgudezaIzq" value="@ViewBag.Pediatria.AgudezaIzq" />
            </div>
        </div>
        <br />
        <br />
        <input type="number" name="PacienteId" value=@ViewBag.Paciente.Id hidden />
        <input type="number" name="Id" value=@ViewBag.Pediatria.Id hidden />
        <input class="btn btn-lg btn-success" type="submit" name="agregar" value="Editar Consulta pediátrica" />
    </form>
</div>
