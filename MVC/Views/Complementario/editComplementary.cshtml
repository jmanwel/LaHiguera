@model Entidades.Models.Complementario;

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1 class="display-4">@ViewBag.Paciente.Nombre @ViewBag.Paciente.Apellido</h1>
    <h4>Datos complementarios (editar)</h4>
    <br />
    <form action="/Complementario/editComplementary" method="POST">
        <div class="row">
            <div class="col">
                <label class="form-label" for="LugarNac">Lugar de nacimiento: </label>
                <input class="form-control" type="text" name="LugarNac" value="@ViewBag.Complementario[0].LugarNac" />
            </div>
            <div class="col">
                <label class="form-label" for="ParajeResidencia">Paraje de Residencia: </label>
                <input class="form-control" type="text" name="ParajeResidencia" value="@ViewBag.Complementario[0].ParajeResidencia" />
            </div>
            <div class="col">
                <label class="form-label" for="Etnia">Etnia: </label>
                <input class="form-control" type="text" name="Etnia" value="@ViewBag.Complementario[0].Etnia" />
            </div>
            <div class="col">
                <label class="form-label" for="EstadoCivil">Estado Civil: </label>
                <input class="form-control" type="text" name="EstadoCivil" value="@ViewBag.Complementario[0].EstadoCivil" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="SabeLeer">Sabe Leer? </label>
                <select class="form-control" name="SabeLeer">
                    @if (@ViewBag.Complementario[0].SabeLeer == 1)
                    {
                        <option selected value=1>Si</option>
                        <option value=0>No</option>
                    }
                    else
                    {
                        <option value=1>Si</option>
                        <option selected value=0>No</option>
                    }         
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="Escolaridad">Escolaridad: </label>
                <input class="form-control" type="text" name="Escolaridad" value="@ViewBag.Complementario[0].Escolaridad" />
                <select class="form-control" name="Escolaridad">
                    if (@ViewBag.Complementario[0].Escolaridad == "Ninguna"){
                        <option selected value="Ninguna">Ninguna</option>
                        <option value="Jardín infantes">Jardín infantes</option>
                        <option value="Primaria">Primaria</option>
                        <option value="Secundaria">Secundaria</option>
                        <option value="Terciaria">Terciaria</option>
                        <option value="Universitaria">Universitaria</option>
                    }
                    if (@ViewBag.Complementario[0].Escolaridad == "Jardín infantes"){
                    <option value="Ninguna">Ninguna</option>
                    <option selected value="Jardín infantes">Jardín infantes</option>
                    <option value="Primaria">Primaria</option>
                    <option value="Secundaria">Secundaria</option>
                    <option value="Terciaria">Terciaria</option>
                    <option value="Universitaria">Universitaria</option>
                    }
                    if (@ViewBag.Complementario[0].Escolaridad == "Primaria"){
                    <option value="Ninguna">Ninguna</option>
                    <option value="Jardín infantes">Jardín infantes</option>
                    <option selected value="Primaria">Primaria</option>
                    <option value="Secundaria">Secundaria</option>
                    <option value="Terciaria">Terciaria</option>
                    <option value="Universitaria">Universitaria</option>
                    }
                    if (@ViewBag.Complementario[0].Escolaridad == "Secundaria"){
                    <option value="Ninguna">Ninguna</option>
                    <option value="Jardín infantes">Jardín infantes</option>
                    <option value="Primaria">Primaria</option>
                    <option selected value="Secundaria">Secundaria</option>
                    <option value="Terciaria">Terciaria</option>
                    <option value="Universitaria">Universitaria</option>
                    }
                    if (@ViewBag.Complementario[0].Escolaridad == "Terciaria"){
                    <option value="Ninguna">Ninguna</option>
                    <option value="Jardín infantes">Jardín infantes</option>
                    <option value="Primaria">Primaria</option>
                    <option value="Secundaria">Secundaria</option>
                    <option selected value="Terciaria">Terciaria</option>
                    <option value="Universitaria">Universitaria</option>
                    }
                    if (@ViewBag.Complementario[0].Escolaridad == "Universitaria"){
                    <option value="Ninguna">Ninguna</option>
                    <option value="Jardín infantes">Jardín infantes</option>
                    <option value="Primaria">Primaria</option>
                    <option value="Secundaria">Secundaria</option>
                    <option value="Terciaria">Terciaria</option>
                    <option selected value="Universitaria">Universitaria</option>
                    }
                </select>
            </div>
            <div class="col">
                <label class="form-label" for="Ocupacion">Ocupacion: </label>
                <input class="form-control" type="text" name="Ocupacion" value="@ViewBag.Complementario[0].Ocupacion" />
            </div>
            <div class="col">
                <label class="form-label" for="AnoIngreso">Año de Ingreso: </label>
                <input class="form-control" type="number" name="AnoIngreso" value=@ViewBag.Complementario[0].AnoIngreso />
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col">
                <label class="form-label" for="Notas">Notas: </label>
                <textarea name="Notas" class="form-control" cols="120" rows="8">"@ViewBag.Complementario[0].Notas"</textarea>
            </div>
        </div>
        <br />
        <input type="number" name="PacienteId" value=@ViewBag.Complementario[0].PacienteId hidden />
        <input type="number" name="Id" value=@ViewBag.Complementario[0].Id hidden />
        <input class="btn btn-lg btn-success" type="submit" name="agregar" value="Modificar Datos complementarios" />
        <a class="btn btn-lg btn-danger" href="/Paciente/viewDetails/@ViewBag.Complementario[0].PacienteId">Cancelar</a>
    </form>
</div>