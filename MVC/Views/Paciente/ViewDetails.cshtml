@using System.Text.Json
@{

    Layout = "../Shared/_Layout.cshtml";
    int edad = @DateTime.Today.Year - @ViewBag.Paciente.FechaNac.Year;
    string str(int edad) => edad > 1 ? "años" : "año";
    string justSayYesOrNo(int? value)
    {
        if (value is null)
        {
            return "NO";
        }
        else
        {
            return value == 1 ? "SI" : "NO";
        }
    }
    var etnia = @ViewBag.Etnia != null ? @ViewBag.Etnia.Nombre : "-";
    var estado_civil = @ViewBag.EstadoCivil != null ? @ViewBag.EstadoCivil.Descripcion : "-";
    var escolaridad = @ViewBag.Escolaridad != null ? @ViewBag.Escolaridad.Descripcion : "-";    
}
@if (TempData["msg"] != null)
{
    <h3 class="text-success">@TempData["msg"]</h3>
}
<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-ligth mt-2">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item mb-3">
                        <button type="button" style="min-width: 120px;" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal_consulta" @ViewBag.Disable >
                            Consultas
                        </button>
                    </li>                    
                    <li class="nav-item mb-3">
                        <button type="button"  style="min-width: 120px;" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal_antecedente" @ViewBag.Disable>
                            Antecedentes
                        </button>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
        <div class="col py-3">
            <div class="container">
                <div class="row">
                    <div class="card mr-3 col-md-4">
                        <div class="card-body">                            
                            @if(ViewBag.Paciente.FlgActivo == 1){
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title">@ViewBag.Paciente.Nombre @ViewBag.Paciente.Apellido</h5>
                                    </div>                                    
                                    <div class="col">
                                        <div class="tip">
                                            <div class="hover-box">Modificar datos</div>
                                            <a asp-action="editPatient" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/pencil.svg" /></a>
                                        </div>
                                        <div class="tip mx-2">
                                            <div class="hover-box">Dar de baja</div>
                                            <a class="mx-1" id="button_trash" asp-action="setDeactivate" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/trash.svg" /></a>
                                        </div>
                                    </div>
                                </div>
                                @if (@ViewBag.Paciente.Dni != null)
                                {
                                    <h6 class="card-subtitle mb-2 text-muted">DNI: @ViewBag.Paciente.Dni</h6>
                                }
                                <p class="card-text">Fecha de nacimiento: <strong>@ViewBag.Paciente.FechaNac</strong></p>
                                <p class="card-text"><strong>@edad @str(@edad)</strong> | Sexo: <strong>@ViewBag.Paciente.Sexo</strong></p>
                                <p class="card-text">Etnia: <strong>@etnia</strong></p>
                                <div class="row mb-2">
                                    <div class="tip">
                                        <div class="hover-box">Crear una CONSULTA</div>
                                        <a asp-controller="Consulta" asp-action="createConsultation" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/bag-plus.svg" />+ Consulta</a>
                                    </div>
                                </div>                                
                                <div class="row mb-2">
                                    <div class="tip">
                                        <div class="hover-box">Crear un ANTECEDENTE</div>
                                        <a asp-controller="Antecedente" asp-action="createAntecedent" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/calendar-plus.svg" />+ Antecedente</a>
                                    </div>
                                </div>                                                                
                            }else{
                                <h5 class="card-title">@ViewBag.Paciente.Nombre @ViewBag.Paciente.Apellido</h5>                                
                                @if (@ViewBag.Paciente.Dni != null)
                                {
                                    <h6 class="card-subtitle mb-2 text-muted">DNI: @ViewBag.Paciente.Dni</h6>
                                }
                                <p class="card-text">Fecha de nacimiento: <strong>@ViewBag.Paciente.FechaNac</strong></p>
                                <p class="card-text"><strong>@edad @str(@edad)</strong> | Sexo: <strong>@ViewBag.Paciente.Sexo</strong></p>
                                <p class="card-text">Etnia: <strong>@etnia</strong></p>
                                <div class="tip">
                                    <div class="hover-box">Re Activar</div>
                                    <a class="mx-1" id="button_trash" asp-action="setActivate" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/bootstrap-reboot.svg" /></a>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card col-md-8">
                        <div class="card-body">
                            @if (ViewBag.Complementario != null)
                            {
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title">Datos complementarios</h5>
                                    </div>
                                    <div class="col">                                    
                                        @if (ViewBag.Paciente.FlgActivo == 1)
                                        {
                                            <div class="tip mx-8">
                                                <div class="hover-box">Modificar datos complementarios</div>
                                                <a class="mx-4" asp-controller="Complementario" asp-action="editComplementary" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/pencil.svg" /></a>
                                            </div>
                                        }
                                    </div>
                                </div>                                
                                <p class="card-text">Lugar de nacimiento: <strong>@ViewBag.Paciente.LugarNac</strong> | Paraje de Residencia: <strong>@ViewBag.Complementario.ParajeResidencia</strong></p>
                                <p class="card-text">Estado Civil: <strong>@estado_civil</strong></p>                                
                                <p class="card-text">Sabe leer?: <strong>@justSayYesOrNo(@ViewBag.Complementario.SabeLeer)</strong></p>                                
                                <p class="card-text">Escolaridad: <strong>@escolaridad</strong> | Completa?: <strong>@justSayYesOrNo(@ViewBag.Complementario.EscolaridadCompleta)</strong></p>
                            <p class="card-text">Ocupacion: <strong>@ViewBag.Complementario.Ocupacion</strong> | Año Ingreso: <strong>@ViewBag.Complementario.Paciente.AnoIngreso</strong></p>
                                <h5 class="card-title">Notas</h5>
                            <p class="card-text">@ViewBag.Complementario.Notas</p>
                                <br />                                         
                            }
                            else
                            {
                                @if(ViewBag.Paciente.FlgActivo == 1) {
                                    <div class="tip text-center">
                                        <div class="hover-box">Agregar datos complementarios</div>
                                        <a class="mx-4" asp-controller="Complementario" asp-action="create" asp-route-id="@ViewBag.Paciente.Id"><img src="~/icons/clipboard-plus.svg"/>&nbsp; Agregar datos complementarios</a>
                                    </div>
                                }
                            }
                        </div>
                    </div>                    
                </div>
                <br/>
                <div class="row">
                    <div class="card col-md-12">
                        <div class="card-body">
                            <h5>Antecedentes</h5>
                            @if (@ViewBag.AntecedentesLabel != null)
                            {
                                @* <pre>@Html.Raw(Json.Serialize(@ViewBag.AntecedentesLabel))</pre> *@
                                @if (@ViewBag.AntecedentesLabel.Sedentarismo == "SI")
                                {
                                    <span class="badge badge-sedentarismo">Sedentarismo</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Alcohol == "SI")
                                {
                                    <span class="badge badge-alcohol">Alcohol</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Drogas == "SI")
                                {
                                    <span class="badge badge-drogas">Drogas</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Tabaco == "SI")
                                {
                                    <span class="badge badge-tabaco">Tabaco</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Alergias == "SI")
                                {
                                    <span class="badge badge-alergias">Alergias</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Diabetes == "SI")
                                {
                                    <span class="badge badge-diabetes">Diabetes</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Hta == "SI")
                                {
                                    <span class="badge badge-hta">Hta</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Dislipemia == "SI")
                                {
                                    <span class="badge badge-dislipemia">Dislipemia</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Obesidad == "SI")
                                {
                                    <span class="badge badge-obesidad">Obesidad</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Chagas == "SI")
                                {
                                    <span class="badge badge-chagas">Chagas</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Hidatidosis == "SI")
                                {
                                    <span class="badge badge-hidatidosis">Hidatidosis</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Tbc == "SI")
                                {
                                    <span class="badge badge-tbc">Tbc</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Cancer == "SI")
                                {
                                    <span class="badge badge-cancer">Cancer</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Quirurgicos == "SI")
                                {
                                    <span class="badge badge-quirurgicos">Quirurgicos</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.RiesgoNutricional == "SI")
                                {
                                    <span class="badge badge-riesgo-nutricional">Riesgo Nutricional</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.RiesgoSocial == "SI")
                                {
                                    <span class="badge badge-riesgo-social">Riesgo Social</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Familiares == "SI")
                                {
                                    <span class="badge badge-familiares">Familiares</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Hospitalizaciones == "SI")
                                {
                                    <span class="badge badge-hospitalizaciones">Hospitalizaciones</span> 
                                }
                                @if (@ViewBag.AntecedentesLabel.Perinatales == "SI")
                                {
                                    <span class="badge badge-perinatales">Perinatales</span> 
                                }
                                    
                            }else{
                                <p>El paciente no cuenta con antecedentes para destacar.</p>
                            }
                        </div>
                    </div>

                </div>
                <br/>
                <div class="row">
                    <div class="col-md-12 card">
                        <div class="card-body">
                            <h5>Últimas consultas</h5>
                            @if (Enumerable.Count(ViewBag.Consulta) > 0)
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Fecha Atención</th>
                                            <th>Motivo</th>
                                            <th>Diagnóstico</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Entidades.Models.Consulta consulta in ViewBag.Consulta)
                                        {
                                            <tr>
                                                <td>@consulta.FechaAtencion</td>
                                                <td>@consulta.MotivoConsulta</td>
                                                <td>@consulta.DiagnosticoConsulta</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            }else{
                                <h5>No se registran consultas para este paciente</h5>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


