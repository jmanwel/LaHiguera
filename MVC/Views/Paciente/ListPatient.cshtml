@model Entidades.Models.Paciente;

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container text-center">
    @if (Enumerable.Count(ViewBag.Pacientes) > 0)
    {
    <h1>Lista de Pacientes activos</h1>
    <br/>
    <table class="table table-hover" id="active_patients">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">DNI</th>
                <th scope="col">Fecha de Nacimiento</th>
                <th scope="col">Sexo</th>
                <th scope="col">Paraje de atención</th>
                <th scope="col">Fecha de alta</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Entidades.Models.Paciente paciente in ViewBag.Pacientes)
        {
                    <tr>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.Apellido</td>
                    <td>@paciente.Dni</td>
                    <td>@paciente.FechaNac</td>
                    <td>@paciente.Sexo</td>
                    <td>@paciente.ParajeAtencion</td>
                    <td>@paciente.FechaAlta</td>
                    <td><a asp-action="createConsultation" asp-route-id="@paciente"><img src="~/bag-plus.svg" alt="crear una consulta" /></a></td>
                    <td><a asp-action="editPatient" asp-route-id="@paciente.Id"><img src="~/pencil.svg" alt="editar datos del paciente" /></a></td>
                    <td id="button_trash"><a asp-action="setDeactivate" asp-route-id="@paciente.Id"><img src="~/trash.svg" alt="borrar paciente" /></a></td>
                </tr>
        }
        </tbody>
        </table>
    } else
    {
        <h4>No se registran pacientes activos en la base de datos</h4>
    }
</div>
