@model Entidades.Models.Paciente;

@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1>Lista de Pacientes activos</h1>
    <br/>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">DNI</th>
                <th scope="col">Fecha de Nacimiento</th>
                <th scope="col">Sexo</th>
                <th scope="col">Paraje de atención</th>
                <th scope="col">Fecha de alta</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Entidades.Models.Paciente paciente in ViewBag.Pacientes)
        {
                <tr>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.Apellido</td>
                    <td>@paciente.Dni</td>
                    <td>@paciente.FechaNac</td>
                    <td>@paciente.Sexo</td>
                    <td>@paciente.ParajeAtencion</td>
                    <td>@paciente.FechaAlta</td>
                    <td><a href="#"><img src="~/pencil.svg" alt="pencil" /></a></td>
                    <td><a href="#"><img src="~/trash.svg" alt="trash" /></a></td>
                </tr>
        }
        </tbody>
    </table>
</div>