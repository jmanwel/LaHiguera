@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="container text-center">
    <h1 class="text-danger">Ha ocurrido un error.</h1>

    <img src="~/img/error2.jpg" />
    <h5 class="text-danger"><strong>@TempData["error"]</strong></h5>
    <p><strong>Por favor, vuelva al inicio.</strong></p>
</div>

